Функция Закрыть() Экспорт

	Для ИндексТокена = 0 По ТаблицаТокенов.Количество() - 1 Цикл
		Строка = ТаблицаТокенов[ИндексТокена];
		Если КлючевыеСлова.Свойство(Строка.Токен) Тогда
			Литерал = Сред(Исходник, Строка.Начало, Строка.Длина);
			КлючевоеСлово = Неопределено;
			Если КлючевыеСлова.Свойство(Литерал, КлючевоеСлово) И Литерал <> КлючевоеСлово Тогда
				Ошибка("Неканоничное написание ключевого слова", ИндексТокена);
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;

	Возврат Неопределено;
